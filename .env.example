# Server
PORT=3000

# MongoDB
MONGODB_USER=your_mongodb_user
MONGODB_PASSWORD=your_mongodb_password
MONGODB_URL=your_mongodb_cluster.mongodb.net
MONGODB_DB=your_database_name

# SMTP (Brevo) - для відправки email
# Створіть SMTP ключ тут: https://app.brevo.com -> SMTP & API -> SMTP
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your_brevo_smtp_key
SMTP_FROM=your_verified_email@example.com

# Frontend/Application Domain
APP_DOMAIN=http://localhost:3000

# Cloudinary - для завантаження фото
# Отримайте креденшили тут: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# JWT Secret для токенів автентифікації
JWT_SECRET=your_super_secret_jwt_key_change_this
