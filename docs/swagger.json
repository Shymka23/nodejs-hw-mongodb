{
  "openapi": "3.1.0",
  "info": {
    "version": "1.0.0",
    "title": "Contacts Service API",
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "description": "REST API для керування контактами користувача. Інтерфейс дозволяє створювати,\nоновлювати, видаляти та переглядати контакти з можливістю фільтрації за типом\nта улюбленим статусом.\n"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Local development server"
    },
    {
      "url": "https://nodejs-hw-mongodb-2bsa.onrender.com",
      "description": "Render deployment"
    }
  ],
  "tags": [
    {
      "name": "Contacts",
      "description": "Операції для керування контактами"
    }
  ],
  "paths": {
    "/contacts": {
      "get": {
        "tags": [
          "Contacts"
        ],
        "summary": "Отримати список контактів",
        "operationId": "getContacts",
        "description": "Повертає список контактів з підтримкою пагінації та фільтрів.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "$ref": "#/components/parameters/page"
          },
          {
            "$ref": "#/components/parameters/perPage"
          },
          {
            "$ref": "#/components/parameters/sortBy"
          },
          {
            "$ref": "#/components/parameters/sortOrder"
          },
          {
            "$ref": "#/components/parameters/type"
          },
          {
            "$ref": "#/components/parameters/isFavourite"
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/components/responses/getContactsSuccess"
          },
          "401": {
            "$ref": "#/components/responses/unauthorized"
          }
        }
      },
      "post": {
        "tags": [
          "Contacts"
        ],
        "summary": "Створити новий контакт",
        "operationId": "createContact",
        "description": "Створює новий контакт для авторизованого користувача.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/createContactRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "$ref": "#/components/responses/createContactSuccess"
          },
          "400": {
            "$ref": "#/components/responses/validationError"
          },
          "401": {
            "$ref": "#/components/responses/unauthorized"
          }
        }
      }
    },
    "/contacts/{contactId}": {
      "get": {
        "tags": [
          "Contacts"
        ],
        "summary": "Отримати контакт за ідентифікатором",
        "operationId": "getContactById",
        "description": "Повертає детальну інформацію про контакт, який належить авторизованому користувачеві.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "$ref": "#/components/parameters/contactId"
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/components/responses/getContactSuccess"
          },
          "401": {
            "$ref": "#/components/responses/unauthorized"
          },
          "404": {
            "$ref": "#/components/responses/contactNotFound"
          }
        }
      },
      "patch": {
        "tags": [
          "Contacts"
        ],
        "summary": "Оновити контакт",
        "operationId": "patchContact",
        "description": "Оновлює дані контакту за ідентифікатором. Підтримує часткове оновлення.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "$ref": "#/components/parameters/contactId"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/updateContactRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/patchContactSuccess"
          },
          "400": {
            "$ref": "#/components/responses/validationError"
          },
          "401": {
            "$ref": "#/components/responses/unauthorized"
          },
          "404": {
            "$ref": "#/components/responses/contactNotFound"
          }
        }
      },
      "delete": {
        "tags": [
          "Contacts"
        ],
        "summary": "Видалити контакт",
        "operationId": "deleteContact",
        "description": "Видаляє контакт, що належить авторизованому користувачу.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "$ref": "#/components/parameters/contactId"
          }
        ],
        "responses": {
          "204": {
            "description": "Контакт успішно видалено. Тіло відповіді відсутнє."
          },
          "401": {
            "$ref": "#/components/responses/unauthorized"
          },
          "404": {
            "$ref": "#/components/responses/contactNotFound"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "parameters": {
      "page": {
        "name": "page",
        "in": "query",
        "description": "Номер сторінки пагінації",
        "schema": {
          "type": "integer",
          "minimum": 1,
          "default": 1
        }
      },
      "perPage": {
        "name": "perPage",
        "in": "query",
        "description": "Кількість елементів на сторінку",
        "schema": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100,
          "default": 10
        }
      },
      "sortBy": {
        "name": "sortBy",
        "in": "query",
        "description": "Поле для сортування результатів",
        "schema": {
          "type": "string",
          "enum": [
            "name",
            "email",
            "contactType",
            "isFavourite",
            "createdAt",
            "updatedAt"
          ],
          "default": "name"
        }
      },
      "sortOrder": {
        "name": "sortOrder",
        "in": "query",
        "description": "Напрям сортування результатів",
        "schema": {
          "type": "string",
          "enum": [
            "asc",
            "desc"
          ],
          "default": "asc"
        }
      },
      "type": {
        "name": "type",
        "in": "query",
        "description": "Фільтр за типом контакту",
        "schema": {
          "type": "string",
          "enum": [
            "work",
            "home",
            "personal"
          ]
        }
      },
      "isFavourite": {
        "name": "isFavourite",
        "in": "query",
        "description": "Фільтр контактів за ознакою улюблених",
        "schema": {
          "type": "boolean"
        }
      },
      "contactId": {
        "name": "contactId",
        "in": "path",
        "required": true,
        "description": "Унікальний ідентифікатор контакту",
        "schema": {
          "type": "string",
          "pattern": "^[0-9a-fA-F]{24}$"
        }
      }
    },
    "schemas": {
      "contact": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "description": "Ідентифікатор контакту",
            "example": "64cfb9c8e5a9f6a6b2f71b3c"
          },
          "name": {
            "type": "string",
            "example": "Jane Doe"
          },
          "phoneNumber": {
            "type": "string",
            "example": "+380971112233"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "jane.doe@example.com"
          },
          "isFavourite": {
            "type": "boolean",
            "example": false
          },
          "contactType": {
            "type": "string",
            "enum": [
              "work",
              "home",
              "personal"
            ],
            "example": "personal"
          },
          "photo": {
            "type": "string",
            "nullable": true,
            "example": "https://res.cloudinary.com/demo/image/upload/sample.jpg"
          },
          "userId": {
            "type": "string",
            "description": "Ідентифікатор власника контакту",
            "example": "64cfb9c8e5a9f6a6b2f71b3b"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "example": "2024-02-10T15:30:45.000Z"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "example": "2024-02-12T09:15:20.000Z"
          }
        },
        "required": [
          "_id",
          "name",
          "phoneNumber",
          "contactType",
          "userId",
          "createdAt",
          "updatedAt"
        ]
      },
      "errorResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "integer",
            "example": 404
          },
          "message": {
            "type": "string",
            "example": "Contact not found"
          },
          "data": {
            "type": "object",
            "example": {}
          }
        },
        "required": [
          "status",
          "message",
          "data"
        ]
      },
      "createContactRequest": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 3,
            "maxLength": 20,
            "example": "John Smith"
          },
          "phoneNumber": {
            "type": "string",
            "minLength": 3,
            "maxLength": 20,
            "example": "+380991234567"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "john.smith@example.com"
          },
          "isFavourite": {
            "type": "boolean",
            "example": false
          },
          "contactType": {
            "type": "string",
            "enum": [
              "work",
              "home",
              "personal"
            ],
            "example": "personal"
          },
          "photo": {
            "type": "string",
            "format": "binary"
          }
        },
        "required": [
          "name",
          "phoneNumber",
          "contactType"
        ]
      },
      "contactResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "integer",
            "example": 200
          },
          "message": {
            "type": "string",
            "example": "Successfully found contact!"
          },
          "data": {
            "$ref": "#/components/schemas/contact"
          }
        }
      },
      "updateContactRequest": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 3,
            "maxLength": 20,
            "example": "Jane Doe"
          },
          "phoneNumber": {
            "type": "string",
            "minLength": 3,
            "maxLength": 20,
            "example": "+380939876543"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "jane.doe@example.com"
          },
          "isFavourite": {
            "type": "boolean",
            "example": true
          },
          "contactType": {
            "type": "string",
            "enum": [
              "work",
              "home",
              "personal"
            ],
            "example": "work"
          },
          "photo": {
            "type": "string",
            "format": "binary"
          }
        },
        "required": []
      }
    },
    "responses": {
      "getContactsSuccess": {
        "description": "Успішне отримання списку контактів",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 200
                },
                "message": {
                  "type": "string",
                  "example": "Successfully found contacts!"
                },
                "data": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/contact"
                      }
                    },
                    "page": {
                      "type": "integer",
                      "example": 1
                    },
                    "perPage": {
                      "type": "integer",
                      "example": 10
                    },
                    "totalItems": {
                      "type": "integer",
                      "example": 45
                    },
                    "totalPages": {
                      "type": "integer",
                      "example": 5
                    },
                    "hasPreviousPage": {
                      "type": "boolean",
                      "example": false
                    },
                    "hasNextPage": {
                      "type": "boolean",
                      "example": true
                    }
                  }
                }
              },
              "required": [
                "status",
                "message",
                "data"
              ]
            }
          }
        }
      },
      "unauthorized": {
        "description": "Запит без валідного токена доступу",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/errorResponse"
            }
          }
        }
      },
      "createContactSuccess": {
        "description": "Контакт успішно створено",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 201
                },
                "message": {
                  "type": "string",
                  "example": "Successfully created a contact!"
                },
                "data": {
                  "$ref": "#/components/schemas/contact"
                }
              },
              "required": [
                "status",
                "message",
                "data"
              ]
            }
          }
        }
      },
      "validationError": {
        "description": "Порушення вимог валідації запиту",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/errorResponse"
            }
          }
        }
      },
      "getContactSuccess": {
        "description": "Успішне отримання контакту",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/contactResponse"
            }
          }
        }
      },
      "contactNotFound": {
        "description": "Контакт не знайдено",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/errorResponse"
            }
          }
        }
      },
      "patchContactSuccess": {
        "description": "Контакт успішно оновлено",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 200
                },
                "message": {
                  "type": "string",
                  "example": "Successfully patched a contact!"
                },
                "data": {
                  "$ref": "#/components/schemas/contact"
                }
              },
              "required": [
                "status",
                "message",
                "data"
              ]
            }
          }
        }
      }
    }
  }
}